{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist/cjs",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "lib": ["esnext", "esnext.asynciterable"]
  },
  "include": ["src/**/*"]
}
